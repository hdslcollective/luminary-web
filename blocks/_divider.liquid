{% render 'divider', block: block %}

{% schema %}
{
  "name": "t:names.divider",
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "t:settings.style",
      "options": [
        {
          "value": "solid",
          "label": "t:options.solid"
        },
        {
          "value": "dashed",
          "label": "t:options.dashed"
        },
        {
          "value": "dotted",
          "label": "t:options.dotted"
        }
      ],
      "default": "solid"
    },
    {
      "type": "range",
      "id": "thickness",
      "label": "t:settings.thickness",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "default": 1
    },
    {
      "type": "range",
      "id": "width",
      "label": "t:settings.width",
      "min": 10,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "t:settings.alignment",
      "options": [
        {
          "value": "left",
          "label": "t:options.left"
        },
        {
          "value": "center",
          "label": "t:options.center"
        },
        {
          "value": "right",
          "label": "t:options.right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "color",
      "label": "t:settings.color",
      "default": "currentColor"
    },
    {
      "type": "header",
      "content": "t:content.spacing"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "label": "t:settings.spacing_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "label": "t:settings.spacing_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ]
}
{% endschema %}
