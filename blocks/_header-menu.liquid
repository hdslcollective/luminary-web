{% render 'header-menu', block: block, section: section %}

{% schema %}
{
  "name": "t:names.menu",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:settings.menu",
      "default": "main-menu"
    },
    {
      "type": "select",
      "id": "menu_style",
      "label": "t:settings.menu_style",
      "options": [
        {
          "value": "text",
          "label": "t:options.text"
        },
        {
          "value": "featured_collections",
          "label": "t:options.featured_collections"
        },
        {
          "value": "featured_products",
          "label": "t:options.featured_products"
        }
      ],
      "default": "text"
    },
    {
      "type": "select",
      "id": "featured_collections_aspect_ratio",
      "label": "t:settings.aspect_ratio",
      "options": [
        {
          "value": "1",
          "label": "t:options.square"
        },
        {
          "value": "1.33",
          "label": "t:options.landscape"
        },
        {
          "value": "0.75",
          "label": "t:options.portrait"
        }
      ],
      "default": "1",
      "visible_if": "{{ block.settings.menu_style == 'featured_collections' }}"
    },
    {
      "type": "select",
      "id": "featured_products_aspect_ratio",
      "label": "t:settings.aspect_ratio",
      "options": [
        {
          "value": "1",
          "label": "t:options.square"
        },
        {
          "value": "1.33",
          "label": "t:options.landscape"
        },
        {
          "value": "0.75",
          "label": "t:options.portrait"
        }
      ],
      "default": "1",
      "visible_if": "{{ block.settings.menu_style == 'featured_products' }}"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "label": "t:settings.image_border_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0,
      "visible_if": "{{ block.settings.menu_style != 'text' }}"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
